<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/carromscreen"
    tools:context=".ChallengeFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="372dp"
        android:layout_height="27dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/progressbarcolor"
        app:queryHint="@string/Search_friends"
        app:searchIcon="@drawable/ic_baseline_search_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@id/search">

        <RelativeLayout
            android:id="@+id/relative4"
            android:background="@drawable/carromscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <RelativeLayout
                android:id="@+id/avatar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/toolbarbgcolor">

                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />

            </RelativeLayout>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="26dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/name"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nikhil"
                android:textColor="@color/white"
                android:textStyle="bold"/>


            <ImageView
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/btn"
                android:src="@drawable/box" />

            <TextView
                android:id="@+id/btn"
                android:layout_marginRight="10dp"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="Challenge"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/cross" />


    <androidx.cardview.widget.CardView
        android:layout_width="259dp"
        android:layout_height="270dp"
        android:layout_below="@id/card"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login with Facebook"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/maincolor"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Get awasome benefits"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/magic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="100 gems for you!"
                android:textColor="@color/white" />
            <TextView
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Keep your progress safe!"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:background="@drawable/bluebgcolor"
            android:gravity="center"
            android:text="f  Login"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>